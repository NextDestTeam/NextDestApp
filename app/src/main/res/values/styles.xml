<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="generalnotitle" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="tvTitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="spActivityTypeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tvLabelStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="llInputPair">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="tvSubtitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvDatePicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bt_round_button</item>
    </style>

    <style name="tvTimePicker">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bt_round_button</item>
    </style>

    <style name="etEventFormCost">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="etDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">3</item>
        <item name="android:gravity">top|left</item>
        <item name="android:maxLines">10</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="etNormalTextInput">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="etCommentTextInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/commentHeight</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top|left</item>
        <item name="android:paddingBottom">@dimen/textPaddingBottom</item>
        <item name="android:paddingTop">@dimen/textPaddingTop</item>
        <item name="android:paddingLeft">@dimen/textPaddingLeft</item>
        <item name="android:paddingRight">@dimen/textPaddingRight</item>
        <item name="android:background">@drawable/comment_shape</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="ibAddPhoto">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:width">48dp</item>
        <item name="android:height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_baseline_add_photo_alternate_24px</item>
    </style>

    <style name="btSubmitStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:background">@drawable/bt_round_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btSubmitSecondaryStyle" parent="btSubmitStyle">
        <item name="android:background">@drawable/bt_round_button_secondary</item>
    </style>

    <style name="btSubmitCardStyle" parent="btSubmitStyle">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="btSubmitCardSecondaryStyle" parent="btSubmitCardStyle">
        <item name="android:background">@drawable/bt_round_button_secondary</item>
    </style>

    <style name="btImageViewDelete">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="btImageViewCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="ivImageViewPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#333</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ivEventFormPhoto">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <!--android:background="#444"-->
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tvSelectedActivityTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:layout_gravity">center</item>-->
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ivSelectedViewPhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">194dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="tvSelectedActivityDetailLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvSelectedActivityLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tvSelectedActivityContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tvSelectedActivityCommentTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="listEventItemPhoto">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="listEventItemDescription">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="listEventItemName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btEditStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@drawable/bt_round_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="text" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="whatTxt" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="imageSize" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="resSize" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">1000dp</item>
        <item name="android:layout_height">60dp</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ratingBarView" parent="@style/Widget.AppCompat.RatingBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <!--<item name="android:layout_marginTop">8dp</item>-->
        <item name="android:numStars">5</item>
        <item name="android:rating">3</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="ratingEvaluation" parent="tvSelectedActivityContent">
        <item name="android:paddingLeft">18dp</item>
    </style>

    <style name="ratingEvaluationText" parent="ratingEvaluation">
        <item name="android:padding">0dp</item>
    </style>

    <style name="tvSelectedActivityContentDivided" parent="tvSelectedActivityContent">
        <item name="android:paddingLeft">14dp</item>
    </style>

    <style name="commentFragmentComment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/textPaddingLeft</item>
        <!--<item name="android:paddingTop">@dimen/textPaddingTop</item>-->
        <item name="android:paddingBottom">@dimen/textPaddingBottom</item>
        <item name="android:paddingRight">@dimen/textPaddingRight</item>

    </style>

    <style name="ibComment">
        <item name="android:layout_width">@dimen/iconWidth</item>
        <item name="android:layout_height">@dimen/iconHeigth</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@mipmap/ic_comment_round</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ratingBarViewCommentItem" parent="ratingBarView">
        <item name="android:layout_marginTop">@dimen/marginTop</item>
    </style>


    <dimen name="textPaddingLeft">8dp</dimen>
    <dimen name="textPaddingTop">8dp</dimen>
    <dimen name="textPaddingBottom">8dp</dimen>
    <dimen name="textPaddingRight">8dp</dimen>
    <dimen name="ratingPaddingTop">8dp</dimen>
    <dimen name="commentHeight">186dp</dimen>
    <dimen name="margin">14dp</dimen>
    <dimen name="iconWidth">36dp</dimen>
    <dimen name="iconHeigth">36dp</dimen>
    <dimen name="marginTop">8dp</dimen>
</resources>
